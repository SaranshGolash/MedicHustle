<%- include('../partials/head') %> <%- include('../partials/nav') %>
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg">
        <div class="card-body p-4">
          <h3>Sign in</h3>
          <% if (error && error.length) { %>
          <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <form action="/auth/local-login" method="post">
            <div class="mb-3">
              <input name="email" class="form-control" placeholder="Email" />
            </div>
            <div class="mb-3">
              <input
                name="password"
                type="password"
                class="form-control"
                placeholder="Password"
              />
            </div>
            <div class="d-grid">
              <button class="btn btn-primary">Sign in</button>
            </div>
          </form>
          <hr />
          <a href="/auth/google" class="btn btn-outline-danger w-100"
            >Sign in with Google</a
          >
          <hr />
          <form action="/auth/register" method="post">
            <input type="hidden" name="name" value="New User" />
            <input type="hidden" name="email" value="test@example.com" />
            <input type="hidden" name="password" value="changeme" />
            <!-- quick register for demo; customize for production -->
            <button class="btn btn-link">Quick demo register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
